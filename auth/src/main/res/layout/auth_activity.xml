<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/appBarHeight"
            android:background="@color/colorPrimary">
        <RelativeLayout
                android:id="@+id/navLeft"
                android:layout_width="@dimen/appBarHeight"
                android:layout_height="@dimen/appBarHeight">
            <ImageView
                    android:id="@+id/icNavLeft"
                    android:layout_width="@dimen/iconSizeSM"
                    android:layout_height="@dimen/iconSizeSM"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_back_white"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/navRight"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/appBarHeight"
                android:layout_height="@dimen/appBarHeight">
            <ImageView
                    android:id="@+id/icNavRight"
                    android:layout_width="@dimen/iconSizeM"
                    android:layout_height="@dimen/iconSizeM"
                    android:layout_centerInParent="true"/>
        </RelativeLayout>

        <TextView
                android:id="@+id/appBarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:layout_centerInParent="true"
                tools:text="Page name"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/fontXL"/>
    </RelativeLayout>

    <FrameLayout
            android:id="@+id/contentFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</LinearLayout>
